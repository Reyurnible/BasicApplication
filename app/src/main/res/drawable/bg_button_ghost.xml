<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_stroke_width"
                android:color="@color/ghost_disable" />
            <corners android:radius="@dimen/button_radius" />
            <padding android:bottom="@dimen/button_padding_vertical"
                android:left="@dimen/button_padding_horizontal"
                android:right="@dimen/button_padding_horizontal"
                android:top="@dimen/button_padding_vertical" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ghost_pressed" />
            <stroke android:width="@dimen/button_stroke_width"
                android:color="@color/ghost_normal" />
            <corners android:radius="@dimen/button_radius" />
            <padding android:bottom="@dimen/button_padding_vertical"
                android:left="@dimen/button_padding_horizontal"
                android:right="@dimen/button_padding_horizontal"
                android:top="@dimen/button_padding_vertical" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_stroke_width"
                android:color="@color/ghost_normal" />
            <corners android:radius="@dimen/button_radius" />
            <padding android:bottom="@dimen/button_padding_vertical"
                android:left="@dimen/button_padding_horizontal"
                android:right="@dimen/button_padding_horizontal"
                android:top="@dimen/button_padding_vertical" />
        </shape>
    </item>
</selector>
