    <style name="TextAppearance.Custom.DatePicker.DayOfWeekLabel" parent="TextAppearance.Custom">
        <item name="@android:includeFontPadding">false</item>
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
        <item name="@android:textSize">@dimen/datepicker_header_text_size</item>
    </style>

    <style name="TextAppearance.Custom.DatePicker.MonthLabel" parent="TextAppearance.Custom">
        <item name="@android:includeFontPadding">false</item>
        <item name="@android:textColor">?attr/android:textColorSecondary</item> <!-- selected should be accent -->
        <item name="@android:textSize">@dimen/datepicker_selected_date_month_size</item>
    </style>

    <style name="TextAppearance.Custom.DatePicker.DayOfMonthLabel" parent="TextAppearance.Custom">
        <item name="@android:includeFontPadding">false</item>
        <item name="@android:textColor">?attr/android:textColorSecondary</item> <!-- selected should be accent -->
        <item name="@android:textSize">@dimen/datepicker_selected_date_day_size</item>
    </style>

    <style name="TextAppearance.Custom.DatePicker.YearLabel" parent="TextAppearance.Custom">
        <item name="@android:includeFontPadding">false</item>
        <item name="@android:textColor">?attr/android:textColorSecondary</item> <!-- selected should be accent -->
        <item name="@android:textSize">@dimen/datepicker_selected_date_year_size</item>
    </style>

    <style name="TextAppearance.Custom.DatePicker.List.YearLabel" parent="TextAppearance.Custom">
        <item name="@android:textColor">?attr/android:textColorSecondary</item> <!-- selected should be accent -->
        <item name="@android:textSize">@dimen/datepicker_year_label_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Notification">
        <item name="@android:textColor">?attr/android:textColorSecondary</item>
        <item name="@android:textSize">@dimen/notification_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Notification.Title">
        <item name="@android:textColor">?attr/android:textColorSecondary</item>
        <item name="@android:textSize">@dimen/notification_title_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Notification.Emphasis">
        <item name="@android:textColor">#66000000</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Primary" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_primary</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Ghost" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_ghost</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
    </style>


