<resources>
    <!-- Widget -->
    <!-- Button -->
    <style name="CustomButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="@android:background">@drawable/bg_button_primary</item>
        <item name="@android:textAppearance">@style/TextAppearance.Custom.Button</item>
    </style>

    <style name="CustomButtonAccent" parent="Widget.AppCompat.Button">
        <item name="@android:background">@drawable/bg_button_accent</item>
        <item name="@android:textAppearance">@style/TextAppearance.Custom.Button</item>
    </style>

    <style name="CustomButtonGhost" parent="Widget.AppCompat.Button">
        <item name="@android:background">@drawable/bg_button_ghost</item>
        <item name="@android:textAppearance">@style/TextAppearance.Custom.Button</item>
    </style>

    <!-- EditText -->
    <style name="CustomEditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Custom.EditText</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="CustomEditText.Inverse" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Custom.EditText.Inverse</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_inverse</item>

    </style>

</resources>